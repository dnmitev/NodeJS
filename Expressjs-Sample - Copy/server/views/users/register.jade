extends ../shared/layout

block main-content
    .jumbotron.col-md-6.col-md-offset-3
        form(method="post" class="form-horizontal")
            fieldset
                legend Register
                .form-group
                    label(for="username" class="col-sm-4") Username
                    .col-lg-8
                        input(id="username" class="form-control" name="username" type="text" placeholder="Username..." required="true")

                .form-group
                    label(for="password" class="col-sm-4") Password
                    .col-lg-8
                        input(id="password" class="form-control" name="password", type="password" placeholder="Password..." required="true")

                .form-group
                    label(for="confirm-password" class="col-sm-4") Confirm Password
                    .col-lg-8
                        input(id="confirm-password" class="form-control" name="confirmPassword" type="password" placeholder="Confirm Password..." required="true")

                .form-group
                    label(for="first-name" class="col-sm-4") First Name
                    .col-lg-8
                        input(id="first-name" class="form-control" name="firstName" type="text" placeholder="First name..." required="true")

                .form-group
                    label(for="last-name" class="col-sm-4") Last Name
                    .col-lg-8
                        input(id="last-name" class="form-control" name="lastName" type="text" placeholder="Last name..." required="true")

                .form-group
                    .col-lg-10.pull-right
                        input(type="submit" class="btn btn-lg pull-right col-sm-offset-1" value="Register")
                        input(type="reset" class="btn btn-lg pull-right col-sm-offset-1" value="Clear")